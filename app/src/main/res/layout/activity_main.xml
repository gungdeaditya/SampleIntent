<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gungde.sampleintent.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTENT EXPLICIT"
        android:textSize="16sp"
        android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_explicit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO TO Activity 2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:text="INTENT EXPLICIT + PUT EXTRA"
            android:textSize="16sp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <EditText
                android:id="@+id/edt_input1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Input Kata"/>

            <Button
                android:id="@+id/btn_explicit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send to Activity 2"/>
            
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTENT IMPLICIT"
            android:textSize="16sp"
            android:layout_marginTop="16sp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_implicit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Browser"/>

        <Button
            android:id="@+id/btn_implicit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Dial"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="INTENT IMPLICIT + PUT EXTRA"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_input2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:hint="Input Kata"/>

            <Button
                android:id="@+id/btn_implicit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHARE"
                android:layout_alignParentRight="true"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="INTENT IMPLICIT + ACTIVITY RESULT"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_implicit4"
            android:onClick="test5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAKE A IMAGE" />

        <ImageView
            android:id="@+id/image"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

    </LinearLayout>
</ScrollView>
